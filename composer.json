{
    "name": "jonsugar/twitch-mcp-php",
    "description": "An MCP server for interacting with Twitch Helix API",
    "keywords": [
        "jonsugar",
        "twitch-mcp-php"
    ],
    "homepage": "https://github.com/jonsugar/twitch-mcp-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Sugar",
            "email": "jonathansugar@mac.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "McpTwitch\\TwitchTool\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "McpTwitch\\TwitchTool\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
